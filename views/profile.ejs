<%- include('header') -%>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1>Daniel</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-8">
                    <h2>Overall balance: 5000</h2>
                </div>
                <div class="col-4" style="text-align: right">
                    <a class="btn btn-primary" role="button" href="/people/new">Rename</a>
                    <a class="btn btn-danger" role="button" href="#">Delete profile</a>
                </div>
            </div>
            <div class="row" style="text-align: center">
                <div class="col-12">
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>Event name</th>
                            <th>Balance for the event</th>
                        </tr>
                        <% eventList.forEach( (event) => { %> 
                        <tr>
                            <td><%= event.name %></td>
                            <td><%= person.eventBalance %></td>
                        </tr>
                        <% }); %> 
                    </table>
                </div>
            </div>
        </div>
<%- include('footer') -%>