<%- include('header') -%>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1>A cold one with the Bois</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-8">
                </div>
                <div class="col-4" style="text-align: right">
                    <a class="btn btn-primary" role="button" href="/rename_event.html">Rename event</a>
                    <a class="btn btn-danger" role="button" href="#">Delete event</a>
                </div>
            </div>
            <div class="row">
                <div class="col-5" style="text-align: right">
                    <div class="row">
                        <div class="col-12" style="text-align: center">
                            <table class="table table-striped table-bordered">
                                <tr>
                                    <th>Name</th>
                                    <th>Event balance</th>
                                </tr>
                                <tr>
                                    <td>Daniel</td>
                                    <td>6000</td>
                                </tr>
                                <tr>
                                    <td>Samuel</td>
                                    <td>-1000</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <form>
                        <div class="row">
                            <div class="col-9" style="text-align: center">
                                <label for="person">Select Person</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-9" style="text-align: left">
                                <div class="form-group">
                                    <select class="form-control" id="person">
                                        <option>Christian</option>
                                        <option>Alexander</option>
                                        <option>Thomas</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-3" style="text-align: center">
                                <a class="btn btn-success" href="/single_event.html">Add</a>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-7">
                    <div class="row">
                        <div class="col-12" style="text-align: center">
                            <table class="table table-striped table-bordered">
                                <tr>
                                    <th>Name</th>
                                    <th>Cost</th>
                                    <th style="text-align: left">Description</th>
                                </tr>
                                <tr>
                                    <td>Daniel</td>
                                    <td>6000</td>
                                    <td style="text-align: left">Drinks</td>
                                </tr>
                                <tr>
                                    <td>Samuel</td>
                                    <td>3000</td>
                                    <td style="text-align: left">Fuel cost for transferring the games</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3"></div>
                        <div class="col-6">
                            <a class="btn btn-primary btn-block" href="/new_loan.html">Add new loan</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
<%- include('footer') -%>
