<%- include('header') -%>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1><%= event.name %></h1>
                </div>
            </div>
            <div class="row">
                <div class="col-8">
                </div>
                <div class="col-4" style="text-align: right">
                    <a class="btn btn-primary" role="button" href="/event/edit/<%= event._id %>">Rename event</a>
                    <a class="btn btn-danger" role="button" href="/event/del/<%= event._id %>">Delete event</a>
                </div>
            </div>
            <div class="row">
                <div class="col-5" style="text-align: right">
                    <div class="row">
                        <div class="col-12" style="text-align: center">
                            <table class="table table-striped table-bordered">
                                <tr>
                                    <th>Name</th>
                                    <th>Event balance</th>
                                </tr>
                                <% insiders.forEach( p => { %> 
                                <tr>
                                    <td><%= p.name %> </td>
                                    <td><%= p.eventBalance %> </td>
                                </tr>
                                <% }); %> 
                            </table>
                        </div>
                    </div>
                    <form method="POST" action="/event/add/<%= event._id %>">
                        <div class="row">
                            <div class="col-9" style="text-align: center">
                                <label for="personName">Select Person</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-9" style="text-align: left">
                                <div class="form-group">
                                    <select class="form-control" id="personName" name="personName">
                                        <% outsiders.forEach( p => { %> 
                                        <option><%= p.name %></option>
                                        <% }); %> 
                                    </select>
                                </div>
                            </div>
                            <div class="col-3" style="text-align: center">
                                <button class="btn btn-success" href="/event/add/<%= event._id %>">Add</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-7">
                    <div class="row">
                        <div class="col-12" style="text-align: center">
                            <table class="table table-striped table-bordered">
                                <% loanList.forEach(loan => { %> 
                                <tr>
                                    <th><%= loan.loanerName %></th>
                                    <th><%= loan.amount %></th>
                                    <th style="text-align: left"><%= loan.description %></th>
                                </tr>
                                <% }); %> 
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3"></div>
                        <div class="col-6">
                            <a class="btn btn-primary btn-block" href="/loan/new/<%= event._id %> ">Add new loan</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
<%- include('footer') -%>
