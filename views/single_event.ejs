<%- include('header') -%>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1>A cold one with the Bois</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-8">
                </div>
                <div class="col-4" style="text-align: right">
                    <a class="btn btn-primary" role="button" href="/event/edit/<%= event._id %>">Rename event</a>
                    <a class="btn btn-danger" role="button" href="#">Delete event</a>
                </div>
            </div>
            <div class="row">
                <div class="col-5" style="text-align: right">
                    <div class="row">
                        <div class="col-12" style="text-align: center">
                            <table class="table table-striped table-bordered">
                                <tr>
                                    <th>Name</th>
                                    <th>Event balance</th>
                                </tr>
                                <% people.forEach( (person) => { %> 
                                <tr>
                                    <td><%= person.name %> </td>
                                    <td><%= person.eventBalance %> </td>
                                </tr>
                                <% }); %> 
                            </table>
                        </div>
                    </div>
                    <form>
                        <div class="row">
                            <div class="col-9" style="text-align: center">
                                <label for="person">Select Person</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-9" style="text-align: left">
                                <div class="form-group">
                                    <select class="form-control" id="person">
                                        <% people.forEach( person => { %> 
                                        <option><%= person.name %></option>
                                        <% }); %> 
                                    </select>
                                </div>
                            </div>
                            <div class="col-3" style="text-align: center">
                                <a class="btn btn-success" href="/event/view/<%= event._id %>">Add</a>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-7">
                    <div class="row">
                        <div class="col-12" style="text-align: center">
                            <table class="table table-striped table-bordered">
                                <% loanList.forEach(loan => { %> 
                                <tr>
                                    <th><%= loan.loaner %></th>
                                    <th><%= loan.cost %></th>
                                    <th style="text-align: left"><%= loan.desc %></th>
                                </tr>
                                <% }); %> 
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3"></div>
                        <div class="col-6">
                            <a class="btn btn-primary btn-block" href="/loan/new">Add new loan</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
<%- include('footer') -%>
