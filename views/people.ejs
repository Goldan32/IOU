<%- include('header') -%>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1>People</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-8">
                </div>
                <div class="col-4">
                    <a class="btn btn-primary btn-block" role="button" href="/people/new">Add new person</a>
                </div>
            </div>
            <div class="row" style="text-align: center">
                <div class="col-12">
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>Name</th>
                            <th>Overall balance</th>
                            <th>Profile</th>
                            <th>Delete</th>
                        </tr>
                        <% people.forEach( (person) => { %>
                        <tr>
                            <td><%= person.name %> </td>
                            <td><%= person.overallBalance %> </td>
                            <td><a href="/people/profile/<%= person._id %>"><i class="fa fa-eye" title="View"></i> </a></td>
                            <td><a href="#"><i class="fa fa-trash" title="Delete" style="color: red"></i> </a></td>
                        </tr>
                        <% }); %> 
                    </table>
                </div>
            </div>
        </div>
<%- include('footer') -%>
